<section class="section-landing">
  <div class="landing-video-wrapper">
    <img src="./engine_video/engine_1.jpg" id="landing-video" alt="" />
  </div>
  <div class="scroll-down"></div>
  <div class="landing-text">
    <div class="landing-text-name">BENCE BAKOS</div>
    <div class="landing-text-title">Full Stack Developer & 3D Artist</div>
  </div>
</section>

<style>
  .section-landing {
    width: 100vw;
    height: 1450px;
    position: relative;
  }
  .landing-video-wrapper {
    position: sticky;
    width: 100%;
    height: 100vh;
    top: 0;
  }
  .scroll-down {
    position: absolute;
    left: 50%;
    transform: translateX(-50%);
    bottom: 50px;
    width: 50px;
    height: 50px;
    background-image: url('./icons/scrolldown.png');
    background-size: contain;
    background-repeat: no-repeat;
    background-position: center;
    cursor: pointer;
    z-index: 2;
  }
  .landing-text {
    width: 100%;
    height: 100vh;
    background: transparent;
    box-sizing: border-box;
    position: absolute;
    bottom: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
  }
  .landing-text-name {
    color: white;
    font-size: 2.2rem;
    margin-top: 500px;
    margin-bottom: 10px;
    text-shadow: #fff 0px 0px 4px;
  }
  .landing-text-title {
    color: white;
    font-size: 1.1rem;
    text-shadow: #fff 0px 0px 4px;
  }
  #landing-video {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
</style>

<script>
  const landingVideo = document.getElementById('landing-video');
  const step = 10;

  function trackScrollPosition() {
    const y = window.scrollY;
    const label = Math.min(Math.floor(y / step) + 1, 60);
    const currentImage = `./engine_video/engine_${label}.jpg`;
    // Change the background image
    landingVideo.setAttribute('src', currentImage);
  }

  document.addEventListener('scroll', () => {
    trackScrollPosition();
  });
</script>
