---
import { SEO } from 'astro-seo';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <SEO title="Bence Bakos | Full Stack Developer and 3D Artist" description="Full Stack Developer with a strong 3D Design background, specializing in frontend web development with React and Astro." />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Raleway:wght@300;400&display=swap" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400&display=swap" rel="stylesheet" />
    <title>Bence Bakos</title>
  </head>
  <body>
    <slot />
    <style is:global>
      :root {
        --astro-gradient: linear-gradient(0deg, #4f39fa, #da62c4);
        --global-side-padding: 80px;
        --global-primary-background: #efefef;
        /* --global-secondary-background: #dbd9d3; */
        --global-secondary-background: #efefef;
        --global-primary-content: #765482;
      }
      html {
        font-family: 'Raleway';
      }
      body {
        margin: 0;
        width: 100vw;
        overflow-x: hidden;
      }
      h1 {
        font-family: 'Raleway';
        margin: 5rem 0rem;
        font-weight: 500;
        font-size: 48px;
        letter-spacing: 0.3em;
        text-align: center;
      }
      h2 {
        font-family: 'Raleway';
        font-weight: 300;
        font-size: 36px;
        letter-spacing: 0.1em;
        margin: 0;
      }
      p {
        font-family: 'Open Sans';
        font-weight: 300;
        font-size: 1.4rem;
        line-height: 2.2rem;
        margin: 0;
      }
      section {
        width: 100vw;
      }
      .divider {
        width: 100%;
        height: 2px;
        background-color: black;
      }

      @media only screen and (max-width: 768px) {
        :root {
          --astro-gradient: linear-gradient(0deg, #4f39fa, #da62c4);
          --global-side-padding: 20px;
          --global-primary-background: #efefef;
          --global-secondary-background: #efefef;
          --global-primary-content: #765482;
        }
        p {
          font-size: 1rem;
        }
      }
    </style>
  </body>
</html>
